<?xml version="1.0" encoding="UTF-8"?>
<root>
    <apis>
        <api name="UseSkill" desc="使用技能" invoke="client" provide="scene">
            <params>
                <field type="fixed64" name="target" desc="目标id" index="1"/>
                <field type="GameObjectType" name="type" desc="目标类型" index="2"/>
                <field type="int32" name="skill" desc="技能id{@link Cskill#id}" index="3"/>
            </params>
            <returns broadcast="true">
                <field type="fixed64" name="target" desc="目标id" index="1"/>
                <field type="GameObjectType" name="targetType" desc="目标类型" index="2"/>
                <field type="int32" name="skill" desc="技能id{@link Cskill#id}" index="3"/>
                <field type="fixed64" name="user" desc="使用者id" index="4"/>
                <field type="GameObjectType" name="userType" desc="使用者类型" index="5"/>
            </returns>
        </api>
        <api name="ShowDamage" desc="展示攻击结果" invoke="scene" provide="client">
            <params>
                <field type="fixed64" name="target" desc="目标id" index="1"/>
                <field type="GameObjectType" name="type" desc="目标类型" index="2"/>
                <field type="int32" name="skill" desc="技能id{@link Cskill#id}" index="3"/>
                <field type="int32" name="damage" desc="伤害数值" index="4"/>
            </params>
        </api>
    </apis>
</root>